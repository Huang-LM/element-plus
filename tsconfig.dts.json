{
  "compilerOptions": {
    "module": "esnext",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "noLib": false,
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "emitDeclarationOnly": true,
    "noEmitOnError": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
}
